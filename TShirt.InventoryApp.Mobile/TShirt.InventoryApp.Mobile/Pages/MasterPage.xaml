<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:TShirt.InventoryApp.Mobile.Pages;assembly=TShirt.InventoryApp.Mobile"
             x:Class="TShirt.InventoryApp.Mobile.Pages.MasterPage">
             
    <MasterDetailPage.Master>
        <pages:Menu></pages:Menu>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <NavigationPage x:Name="Navigator"
                        BarBackgroundColor="Green">
            <x:Arguments>
                <pages:MainPage></pages:MainPage>
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>

</MasterDetailPage>