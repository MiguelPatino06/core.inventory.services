@model TShirt.InventoryApp.Web.Models.ProductTransferModels

@{
  ViewBag.Title = "Transferencia - Crear Solicitud";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm(new { @id = "formDestiny", @enctype = "multipart/form-data" }))
{

  @Html.AntiForgeryToken()

  <div class="row">
    <div class="col-lg-8">
      <div class="form-group">
        <div class="col-lg-2">
          @Html.LabelFor(model => model.warehouseDestiny, htmlAttributes: new { @class = "control-label col-sm-2" })
        </div>
        <div class="col-lg-3 left">
          @Html.DropDownList("warehouseDestiny", ViewData["warehouses"] as List<SelectListItem>, new { @class = "form-control input-sm" })
        </div>
        <div class="col-lg-3 left">
          <button type="submit" name="submitButton" class="btn btn-success btn-md" value="_SUBMIT">Siguiente ></button>
        </div>
      </div>
    </div>
    @Html.HiddenFor(x => x.warehouseOrigin)
  </div>

}
@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")

  <script type="text/javascript">
    $(document)
        .ready(function () {
        });
  </script>
}

