@model TShirt.InventoryApp.Services.Models.UserLoginCredentials
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_ExternalLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="login-box" style="top: 50px !important;">
        <div class="login-logo">
           
            
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            <div class="row">
                <div class="col-md-4 col-md-offset-3">
                    <img src="~/Content/Images/Logo.png" />
                </div>
            </div>

            <p class="login-box-msg">Autenticarse para iniciar sesión</p>
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            <form action="" method="post">
                <div class="form-group has-feedback">
                    @Html.EditorFor(a => a.Code, new {htmlAttributes = new {@class = "form-control", @placeholder = "Nombre Usuario"}})
                    @Html.ValidationMessageFor(model => model.Code, "", new {@class = "text-danger"})
                </div>
                <div class="form-group has-feedback">
                    @Html.EditorFor(a => a.Password, new {htmlAttributes = new {@class = "form-control", @placeholder = "Password"}})
                    @Html.ValidationMessageFor(model => model.Password, "", new {@class = "text-danger"})
                </div>
                <div class="row">
                    <div class="col-md-2 col-md-offset-2">
                        <button type="submit" w id="logInBtn" class="btn btn-success" style="width: 200px" >Entrar</button>
                    </div><!-- /.col -->
                </div>

            </form>

            @*<div class="social-auth-links text-center">
                    <p>- OR -</p>
                    <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign in using Facebook</a>
                    <a href="#" class="btn btn-block btn-social btn-google-plus btn-flat"><i class="fa fa-google-plus"></i> Sign in using Google+</a>
                </div>*@<!-- /.social-auth-links -->
            <br>
            <a href="#">Olvidé mi contraseña</a><br>
            @* <a href="#" class="text-center">Registrar</a>*@
        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $("#Password ").keypress(function (e) {
            //enter
            if (e.keyCode == 13) { $("#logInBtn").click(); };
        });

        $(document).ready(function () {
            $("#Email").focus();
        });
    </script>
}
